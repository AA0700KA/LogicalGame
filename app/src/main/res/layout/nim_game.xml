<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout"
    android:background="@drawable/walls2"
    android:screenOrientation="portrait">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="50dp">
    <ImageView
        android:id="@+id/money00"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/money2"
        android:layout_marginRight="5dp"/>
    <ImageView
        android:id="@+id/money10"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/money2"
        android:layout_marginRight="5dp"/>
    <ImageView
        android:id="@+id/money20"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/money2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp">
        <ImageView
            android:id="@+id/money01"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/money2"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:id="@+id/money11"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/money2"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:id="@+id/money21"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/money2"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:id="@+id/money31"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/money2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp">
        <ImageView
            android:id="@+id/money02"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/money2"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:id="@+id/money12"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/money2"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:id="@+id/money22"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/money2"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:id="@+id/money32"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/money2"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:id="@+id/money42"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/money2" />
    </LinearLayout>
    </LinearLayout>

    <java.devcolibri.itvdn.com.logicalgame.CoinView
        android:id="@+id/coinView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:width="40dp"
        android:height="40dp"
        android:text="ОК"
        android:textColor="@color/Red"
        android:textSize="30dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="22mm"
        android:onClick="onClickOK"
        android:background="@drawable/round_buton" />

    <blink
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/playerTurn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40mm"
            android:layout_marginTop="20dp"
            android:width="122dp"
            android:height="66dp"
            android:text="Ход:\nИгрок 1"
            android:textAlignment="center"
            android:textColor="@color/Yellow"
            android:textSize="20dp" />
    </blink>

    <blink
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/vinner"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:width="200dp"
            android:height="100dp"
            android:background="@color/Yellow"
            android:gravity="center"
            android:text="Игрок1 ПОБЕДИЛ!!!"
            android:textColor="@color/Red"
            android:textSize="16dp"
            android:visibility="invisible" />
    </blink>

</RelativeLayout>